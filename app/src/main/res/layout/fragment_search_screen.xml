<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:nestedScrollingEnabled="true"
    android:focusableInTouchMode="true">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/search_subtitle1"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_shop_name"
        android:layout_width="340dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_view_background"
        android:clickable="true"
        android:focusable="false"
        android:theme="@style/MyAppSearchView"
        android:queryBackground="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:queryHint="@string/search_tooltip"
        app:iconifiedByDefault="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searching_button"
        android:layout_width="97dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/searching_button"
        android:clickable="true"
        android:elevation="7dp"
        android:gravity="left|center"
        android:paddingLeft="45dp"
        android:text="@string/search"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searching_button_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="1dp"
        android:elevation="7dp"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/searching_button"
        app:layout_constraintEnd_toEndOf="@+id/searching_button"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="@+id/searching_button"
        app:layout_constraintTop_toTopOf="@+id/searching_button"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/search_fill0_wght400_grad0_opsz24" />

    <ExpandableListView
        android:id="@+id/expandableview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/transparent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:groupIndicator="@null"
        android:nestedScrollingEnabled="true"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="5dp"
        app:layout_constraintBottom_toTopOf="@+id/searching_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_shop_name">
    </ExpandableListView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/hotpapper_credit_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="28dp"
        android:scaleX="3"
        android:scaleY="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/hotpepper_s" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hotpepper_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:text="@string/hotpapper_credit"
        android:textSize="11sp"
        android:textColor="@color/darker_gray_trans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotpapper_credit_image" />

</androidx.constraintlayout.widget.ConstraintLayout>